<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImage16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores base -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/navy_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:statusBarColor">@color/navy_dark</item>

        <!-- Formas redondeadas globales -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Rounded16</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Rounded16</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Rounded16</item>

        <!-- Widgets por defecto -->
        <item name="materialButtonStyle">@style/Widget.RCL.Button</item>
        <item name="materialCardViewStyle">@style/Widget.RCL.Card</item>
        <!-- <item name="textInputStyle">@style/Widget.RCL.TextInputLayout</item> -->
    </style>

    <!-- Forma redondeada genérica -->
    <style name="Shape.Rounded16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!--  Alias para evitar el error: donde diga @style/Shape funcionará -->
    <style name="Shape" parent="Shape.Rounded16" />

    <!-- Botón primario -->
    <style name="Widget.RCL.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card con sombra suave -->
    <style name="Widget.RCL.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- TextInputLayout con borde y color institucional -->
    <style name="Widget.RCL.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/navy</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/navy</item>
        <item name="endIconMode">clear_text</item>
    </style>

</resources>
