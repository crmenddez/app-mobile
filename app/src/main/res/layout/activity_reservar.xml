<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReservarActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/navy"
        app:title="Reserva de ambientes"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Temporizador -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiempo restante para reservar: 05:00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Card: Selección de área -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecciona el área"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Busca tu área de preferencia"
                        style="@style/Widget.RCL.TextInputLayout"
                        app:endIconMode="clear_text">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBuscarArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <RadioGroup
                        android:id="@+id/rgAreas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancha 01 - Tenis de campo"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancha 02 - Tenis de campo"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancha de Fútbol 12 Personas"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancha de Fútbol 6 Personas"/>
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Invitados y Fechas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecciona invitados y fechas"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <!-- Invitados -->
                    <Spinner
                        android:id="@+id/spInvitados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <!-- Fecha inicial -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFechaInicio"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar fecha inicial"
                        android:layout_marginTop="8dp"/>

                    <!-- Fecha final -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFechaFinal"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar fecha final"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón Buscar Reservas -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHorario"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Buscar reservas"
                app:backgroundTint="@color/navy"
                android:textColor="@android:color/white" />

            <!-- Lista de horarios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
