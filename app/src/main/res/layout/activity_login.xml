<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginTop="60dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola! Bienvenido de nuevo, te hemos extrañado "
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <!-- Usuario / correo -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCuenta"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código o correo"
        app:endIconMode="clear_text">

        <!-- Mantengo TU id original para no romper el código -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:inputType="textEmailAddress|textNoSuggestions" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:hint="Contraseña"
        app:endIconMode="password_toggle">

        <!-- Mantengo TU id original (ojo al typo 'Pasword') -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >


        <CheckBox
            android:layout_width="160dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="30dp"
            android:text="Recordarme"
            android:paddingLeft="2dp"
            android:buttonTint="@color/blue"/>

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Olvidaste tu contraseña"
            android:gravity="right"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:linksClickable="true"
            android:textColorLink="@color/blue"
            android:autoLink="web"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >


        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="Ingresar"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@color/blue"
            app:backgroundTint="@color/blue"/>



    </LinearLayout>
</LinearLayout>