<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReservoCorrectamenteActivity"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Felicitaciones"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/textMensaje"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Se ha realizado correctamente la reserva"
            android:textSize="16sp"
            android:textColor="#4C59A8"
            android:padding="8dp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/producto3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/confirmacion"
            android:contentDescription="Frutas" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegresar"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_marginTop="40dp"/>
    </LinearLayout>


</LinearLayout>