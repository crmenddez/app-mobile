<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PagoErrorActivity"
    android:paddingTop="64dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/errorIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_error"/>

        <TextView
            android:id="@+id/tvErrorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error en el Pago"
            android:textSize="24sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvErrorDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lo sentimos, no pudimos procesar tu pago en este momento. Esto puede deberse a varios factores."
            android:textSize="16sp"
            android:textColor="@color/subtitle"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Card con información de error -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="10dp"
            android:padding="16dp"
            app:cardBackgroundColor="#F0F0F0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código de error:"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tvCodigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NB-4001"
                    android:textSize="16sp"
                    android:textColor="@color/subtitle"
                    android:paddingTop="4dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21/9/2025"
                    android:textSize="16sp"
                    android:textColor="@color/subtitle"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referencia:"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvReferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TXN-789456123"
                    android:textSize="16sp"
                    android:textColor="@color/subtitle"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/tvCausasTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posibles causas:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/llCausas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Fondos insuficientes en tu tarjeta"
                android:textSize="16sp"
                android:textColor="@color/subtitle"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Datos de tarjeta incorrectos"
                android:textSize="16sp"
                android:textColor="@color/subtitle"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Tarjeta bloqueada o vencida"
                android:textSize="16sp"
                android:textColor="@color/subtitle"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Problemas temporales del sistema"
                android:textSize="16sp"
                android:textColor="@color/subtitle"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>